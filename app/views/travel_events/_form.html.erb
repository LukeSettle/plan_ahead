<div class="container form-group">
  <%= simple_form_for @travel_event do |f| %>
    <div class="form-inputs">
      <%= f.hidden_field :parent_event_id, value: @travel_event.parent_event_id || params[:parent_event_id] %>
      <%= f.input :origin %>
      <%= f.input :destination %>
      <%= f.input :mode_of_transportation %>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to t('crud.cancel'), plans_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>