<div class="container form-group">
  <%= simple_form_for @travel_event do |f| %>
    <div class="form-inputs">
      <%= f.hidden_field :plan_id, value: @travel_event.plan_id || params[:plan_id] %>
      <%= f.hidden_field :data %>
      <%= f.input :origin %>
      <%= f.input :destination %>
      <%= f.input :mode_of_transportation %>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', id: 'create-travel-event' %>
      <%= link_to t('crud.cancel'), plans_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>